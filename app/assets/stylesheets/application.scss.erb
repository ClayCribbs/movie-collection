@import "bootstrap-sprockets";
@import "bootstrap";
@import 'palette';
@import 'font-awesome';
@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700);

html, body, input, button, select, textarea, optgroup, option, form, fieldset, table, i, b, p, a, li, tr, td, h1, h2, h3, h4, h5, h6 {
  font-family: 'Montserrat', sans-serif;
}

.search-bar-wrapper {
  max-height: 45px;
  margin-top: -20px;
  padding: 5px 25px;
  background-color: $color_search_bar;
  border: solid 1px $color_border_dark;
  .btn {
    background-image: none;
    background-color: white;
    border: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    box-shadow: none !important;
    height: 30px;
    border-top-left-radius: 15px !important;
    border-bottom-left-radius: 15px !important;
    &:hover,
    &:focus,
    &:active {
      outline: none !important;
    }
  }
  input {
    color: black;
    outline: none;
    background-color: white !important;
    border: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    box-shadow: none !important;
  }
  #q {
    height: 30px;
    border-top-right-radius: 15px !important;
    border-bottom-right-radius: 15px !important;
  }
}

html {
  body {
    position: relative;
    margin: 0;
    padding-bottom: 0px;
    min-height: 100%;
    background-color: #faf9fb;
  }
}

.navbar {
  height: 35px;
}

.movie-index-wrapper {
  padding-left: 40px;
  padding-right: 40px;
}

.pre-scrollable {
  max-height: 100%;
}

.image-fit {
	width: auto;
	height: 150px;
  vertical-align: middle;
}

.movie-sidebar-wrapper {
  margin-left: 20px;
  margin-right: 20px;
  background-color: #e9ece5;
  border: solid 4px #b3c2bf;
  color: #3b3a36;
  border-radius: 25px;
}

.login-wrapper {
  margin-top: 100px;
}

.login-form {
  color: #22264b;
  border: solid 1px #22264b;
  background-color: #e8edf3;
  border-radius: 15px;
  padding-left: 75px;
  padding-right: 75px;
  padding-bottom: 25px;
}

.tree-wrapper {
	max-width: 100%;
  max-height:100% !important;
  background: white;
  border-right: solid 1px $color_border_dark !important;
  padding-left: 25px;
  padding-right: 25px;
  padding-bottom: 100%;
  margin-top: 0px;
  overflow: hidden;
  a {
    text-decoration: none;
    color: #3b3a36;
  }
}

a {
  color: $color_links;
  &:hover,
  &:focus,
  &:active {
    color: $color_links;
  }
}

.movie-container {
  padding-top: 15px;
  height:200px;
}

.slide-in {
  position: fixed;
  bottom: 0;
}

.img-preview {
  height: 120px;
  width: auto;
  vertical-align: middle;
}

.slider {
  height: 155px;
  background-color: $color_movie_preview_bg;
  margin-left: -15px;
  margin-right: 0px;
  width: 80%;
  padding-right: 20px;
  border-top: solid 1px #22264b;
  z-index: 1;
}

.preview-wrapper {
  padding-top: 15px;
  padding-bottom: 15px;
}


.navbar-default {
  background-color: $bgDefault;
  border-color: $bgHighlight;
  .navbar-brand {
    color: $colDefault;
    &:hover, &:focus {
      color: $colHighlight; }}
  .navbar-text {
    color: $colDefault; }
  .navbar-nav {
    > li {
      > a {
        color: $colDefault;
        &:hover,  &:focus {
          color: $colHighlight; }}
      @if $dropDown {
        > .dropdown-menu {
          background-color: $bgDefault;
          > li {
            > a {
              color: $colDefault;
              &:hover,  &:focus {
                color: $colHighlight;
                background-color: $bgHighlight; }}
            > .divider {
              background-color: $bgHighlight;}}}}}
    @if $dropDown {
      .open .dropdown-menu > .active {
        > a, > a:hover, > a:focus {
          color: $colHighlight;
          background-color: $bgHighlight; }}}
    > .active {
      > a, > a:hover, > a:focus {
        color: $colHighlight;
        background-color: $bgHighlight; }}
    > .open {
      > a, > a:hover, > a:focus {
        color: $colHighlight;
        background-color: $bgHighlight; }}}
  .navbar-toggle {
    border-color: $bgHighlight;
    &:hover, &:focus {
      background-color: $bgHighlight; }
    .icon-bar {
      background-color: $colDefault; }}
  .navbar-collapse,
  .navbar-form {
    border-color: $colDefault; }
  .navbar-link {
    color: $colDefault;
    &:hover {
      color: $colHighlight; }}}
@media (max-width: 767px) {
  .navbar-default .navbar-nav .open .dropdown-menu {
    > li > a {
      color: $colDefault;
      &:hover, &:focus {
        color: $colHighlight; }}
    > .active {
      > a, > a:hover, > a:focus {
        color: $colHighlight;
        background-color: $bgHighlight; }}}
}

.navbar-nav > li > a, .navbar-brand {
    padding-top:7px !important; 
    padding-bottom:0 !important;
    height: 30px;
}
.navbar {min-height:30px !important;}