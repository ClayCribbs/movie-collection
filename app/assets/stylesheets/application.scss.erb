@import "bootstrap-sprockets";
@import "bootstrap";
@import 'palette';
@import 'font-awesome';
@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700);

html, body, input, button, select, textarea, optgroup, option, form, fieldset, table, i, b, p, a, li, tr, td, h1, h2, h3, h4, h5, h6 {
  font-family: 'Montserrat', sans-serif;
}

.search-bar-wrapper {
  max-height: 45px;
  margin-top: -20px;
  padding: 5px 25px;
  background-color: $color_search_bar;
  border: solid 1px $color_border_dark;
  .btn {
    background-image: none;
    background-color: white;
    border: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    box-shadow: none !important;
    height: 30px;
    border-top-left-radius: 15px !important;
    border-bottom-left-radius: 15px !important;
    &:hover,
    &:focus,
    &:active {
      outline: none !important;
    }
  }
  input {
    color: black;
    outline: none;
    background-color: white !important;
    border: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    box-shadow: none !important;
  }
  #q {
    height: 30px;
    border-top-right-radius: 15px !important;
    border-bottom-right-radius: 15px !important;
  }
}

html {
  body {
    position: relative;
    margin: 0;
    padding-bottom: 0px;
    min-height: 100%;
    background-color: #faf9fb;
  }
}

.navbar {
  height: 40px;
  border-bottom: solid 1px #22264b !important;
}

.movie-index-wrapper {
}

.image-fit {
	width: 100%;
	height: auto;
  vertical-align: middle;
}

.btn-nav {
  background-color: #e6cf8b;
  height: 30px;
  margin-top: 9px !important;
  padding-top: 5px !important;
  padding-bottom: 5px !important;
}

.movie-sidebar-wrapper {
  margin-left: 20px;
  margin-right: 20px;
  background-color: #e9ece5;
  border: solid 4px #b3c2bf;
  color: #3b3a36;
  border-radius: 25px;
}

.login-wrapper {
  margin-top: 100px;
}

.login-form {
  color: #22264b;
  border: solid 1px #22264b;
  background-color: #e8edf3;
  border-radius: 15px;
  padding-left: 75px;
  padding-right: 75px;
  padding-bottom: 25px;
}

.tree-wrapper {
	max-width: 100%;
  max-height:100% !important;
  background: #e8edf3;
  border-right: solid 1px #22264b !important;
  padding-left: 25px;
  padding-right: 25px;
  padding-bottom: 100%;
  margin-top: 0px;
  overflow: hidden;
  a {
    text-decoration: none;
    color: #3b3a36;
  }
}

.movie-container {
  padding-top: 15px;
  height:200px;
}

.slide-in {
  position: fixed;
  bottom: 0;
}

.img-preview {
  height: 120px;
  width: auto;
  vertical-align: middle;
}

.slider {
  height: 155px;
  background-color: #e9ece5;
  margin-left: -15px;
  margin-right: 0px;
  width: 80%;
  padding-right: 20px;
  border-top: solid 1px #22264b;
  z-index: 1;
}

.preview-wrapper {
  padding-top: 15px;
  padding-bottom: 15px;
}